<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            style="@style/top_style"
            android:text="高级工具" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/desk_left_selector"
            android:onClick="back">

            <TextView
                style="@style/top_letf_back_style"
                android:text="功能列表" />
        </LinearLayout>

    </RelativeLayout>


    <TextView
        style="@style/Atools"
        android:onClick="queryPage"
        android:text="归属地号码查询" />

    <TextView
        style="@style/Atools"
        android:onClick="backUpSms"
        android:text="短信备份" />

    <TextView
        style="@style/Atools"
        android:onClick="appLock"
        android:text="程序锁" />

    <TextView
        style="@style/Atools"
        android:onClick="appRecommend"
        android:text="软件推荐" />

</LinearLayout>